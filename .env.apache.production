# Apache Production Environment Configuration
# For deployment to nusantaragroup.co

# Domain Configuration
DOMAIN=nusantaragroup.co
PROTOCOL=https

# API Configuration
REACT_APP_API_URL=https://nusantaragroup.co/api
REACT_APP_ENV=production

# Build Configuration
NODE_ENV=production
GENERATE_SOURCEMAP=false

# Security
REACT_APP_FAST_REFRESH=false

# Apache Paths
APACHE_DOCUMENT_ROOT=/var/www/html/nusantara-frontend
APACHE_LOG_DIR=/var/log/apache2

# SSL Configuration (managed by Virtualmin)
SSL_CERT_PATH=/home/nusantaragroup/ssl.cert
SSL_KEY_PATH=/home/nusantaragroup/ssl.key

# Backend Configuration
BACKEND_PORT=5000
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nusantara_construction

# CORS Configuration
CORS_ORIGIN=https://nusantaragroup.co
