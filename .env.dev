# Environment variables for Development/Testing
# Copy this file to .env.dev for development

# Database Configuration (Development)
DB_NAME=yk_construction_dev
DB_USERNAME=postgres
DB_PASSWORD=dev_password
DB_HOST=database
DB_PORT=5432

# JWT Configuration (Development - less secure for testing)
JWT_SECRET=dev_jwt_secret_key_for_testing_only
JWT_EXPIRES_IN=24h

# Application Configuration
NODE_ENV=development
PORT=5000

# Email Configuration (Using Mailhog for testing)
EMAIL_HOST=mailhog
EMAIL_PORT=1025
EMAIL_USER=test@ykconstruction.com
EMAIL_PASS=test123

# pgAdmin Configuration
PGADMIN_EMAIL=admin@ykconstruction.com
PGADMIN_PASSWORD=admin123

# Upload Configuration
UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE=10MB

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Debug Configuration
DEBUG=app:*
LOG_LEVEL=debug

# Development Features
ENABLE_CORS=true
ENABLE_DEV_LOGGING=true
ENABLE_MOCKUP_DATA=true

# API Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_ENVIRONMENT=development
